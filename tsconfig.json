{
    "compilerOptions": {
        "module": "commonjs",
        "moduleResolution": "node",
        "target": "es2016",
        "lib":[
            "ES6",
            "DOM"
        ],
        "sourceMap": true,
        "types": [
            "node",
            "reflect-metadata"
        ],
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "resolveJsonModule": true,
        "outDir": "./out"
    },
    "exclude": [
        "node_modules"
    ]
}